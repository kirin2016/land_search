<h4>マイページ編集</h4>


<%= form_with model: @customer, url: admins_customer_path(@customer.id), local: true do |f| %>

  <h5 class="my-4">基本情報編集</h5>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :last_name, "氏名" %></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :last_name, "(性)" %></div>
    <div class="col-lg-3"><%= f.text_field :last_name, class: "form-control" %></div>
    <div class="col-lg-1 text-right d-flex align-items-center justify-content-end px-0"><%= f.label :first_name, "(名)" %></div>
    <div class="col-lg-3"><%= f.text_field :first_name, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :last_name_kana, "フリガナ" %></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :last_name_kana, "(セイ)" %></div>
    <div class="col-lg-3"><%= f.text_field :last_name_kana, class: "form-control" %></div>
    <div class="col-lg-1 text-right d-flex align-items-center justify-content-end px-0"><%= f.label :first_name_kana, "(メイ)" %></div>
    <div class="col-lg-3"><%= f.text_field :first_name_kana, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :email, "メールアドレス" %></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= f.text_field :email, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 px-0"><%= f.label :postal_code, "郵便番号" %></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= f.text_field :postal_code, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :prefecture_code, "住所" %></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :prefecture_code, "(都道府県)" %></div>
    <div class="col-lg-3"><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {}, {class: "form-control"} %></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :address_city, "(市区町村)" %></div>
    <div class="col-lg-3"><%= f.text_field :address_city, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-3"></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :address_street, "(町名番地)" %></div>
    <div class="col-lg-3"><%= f.text_field :address_street, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-3"></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :address_building, "(建物名)" %></div>
    <div class="col-lg-7"><%= f.text_field :address_building, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :telephone_number, "電話番号" %></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= f.text_field :telephone_number, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :email, "メールアドレス" %></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= f.text_field :email, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :sale_staff, "営業担当" %></div>
    <div class="col-lg-1 d-flex align-items-center justify-content-end px-0"><%= f.label :sale_staff, "(担当者名)" %></div>
    <div class="col-lg-3"><%= f.text_field :sale_staff, class: "form-control" %></div>
    <div class="col-lg-1 text-right d-flex align-items-center justify-content-end px-0"><%= f.label :sale_staff_telephone, "(連絡先)" %></div>
    <div class="col-lg-3"><%= f.text_field :sale_staff_telephone, class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 d-flex align-items-center px-0"><%= f.label :is_deleted, "会員ステータス" %></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= f.select :is_deleted,{有効:false, 退会:true}, {}, {class: "form-control"} %></div>
  </div>


  <div class="actions row my-5">
    <div class="col-lg-4"></div>
    <div class="col-lg-8"><%= f.submit '変更を保存', class:"btn btn-success btn-lg px-0 w-25" %></div>
  </div>


<% end %>
