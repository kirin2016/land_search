<h4>会員一覧</h4>

<table class="table table-hover table-inverse my-4">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>プラン依頼数</th>
      <th>営業担当</th>
      <th>会員ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id  %></td>
        <td>
          <%= link_to(admins_customer_path(customer.id)) do %>
            <%= customer.last_name %>　<%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.sale_staff %></td>
        <% if customer.is_deleted == false %>
          <td class="text-success font-weight-bold">有効</td>
		    <% elsif customer.is_deleted == true %>
		      <td class="text-muted font-weight-bold">退会</td>
		    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>